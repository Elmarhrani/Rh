                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        {{ iMacro.showImagePersonne(employee) }}
        <div class="ShowDataDiv">

            <table  class="table table-hover table-striped ShowDataTable towCln" cellspacing="0" width="100%">
                <tbody>
                <tr>
                    <td>Matricule</td>
                    <td>{{ employee.matricule }}</td>
                </tr>
                <tr>
                    <td>Salaire</td>
                    <td>{{ employee.salaire }}</td>
                </tr>


                </tbody>
            </table>

        </div>
    </div>

    {#
          cette div sera injecter dans la deuxième Tab : tab="formation"
      #}
