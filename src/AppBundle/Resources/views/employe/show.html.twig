                        <td>{{ employee.adresse }}</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>{{ employee.email }}</td>
                    </tr>
                    <tr>
                        <td>Datenaiss</td>
                        <td>{% if employee.dateNaiss %}{{ employee.dateNaiss|date('d-m-Y') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <td>Niveau</td>
                        <td>{{ employee.niveau }}</td>
                    </tr>
                    <tr>
                        <td>Cin</td>
                        <td>{{ employee.CIN }}</td>
                    </tr>
                    <tr>
                        <td>Cnss</td>
                        <td>{{ employee.CNSS }}</td>
                    </tr>
                    <tr>
                        <td>Téléphone</td>
                        <td>{{ employee.tel }}</td>
                    </tr>
                    <tr>
                        <td>Situation Familaile</td>
                        <td>{{ employee.sitFamilaile }}</td>
                    </tr>
                    <tr>
                        <td>Nombre Enfant</td>
                        <td>{{ employee.nbreEnfant }}</td>
                    </tr>
                    <tr>
                        <td>Téléphone</td>
                        <td>{{ employee.tel }}</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>

