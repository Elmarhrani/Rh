       {# {{ iMacro.showFormationsPersonne(employee) }}

        {{ iMacro.showStagesPersonne(employee) }}#}
    </div>

    <div id="messages" tab="historique">
        {{ iMacro.showHistoricPersonne(employee) }}

        {{ iMacro.showNotesPersonne(employee) }}

    </div>

{% endblock %}
