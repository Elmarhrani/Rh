                    <tr>
                        <td>Matricule</td>
                        <td>{{ employee.matricule }}</td>
                    </tr>
                    <tr>
                        <td>Nom</td>
                        <td>{{ employee.nom }}</td>
                    </tr>
                    <tr>
                        <td>Prenom</td>
                        <td>{{ employee.prenom }}</td>
                    </tr>
                    <tr>
