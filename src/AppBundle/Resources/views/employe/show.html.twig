{% import '@App/_macros.html.twig' as iMacro %}

{% block CONTENT %}


    {#
        cette div sera injecter dans la premier Tab : tab="candidat"
    #}
    <div id="home" tab="candidat">

        <div class="panel-heading">
            <div class="panel-title">Fiche personnelle</div>
            <div class="export-options-container pull-right ">
                <div class="exportOptions">
                    <div class="DTTT btn-group">
                        <a class="btn btn-default" title="export excile"><span><i class="fa fa-file-pdf-o"></i></span></a>
                        <a class="btn btn-default" title="" href="{{ path('employee_edit', { 'id': employee.id }) }}"><span><i class="fa fa-edit"></i></span></a>
                       {# {{ form_start(delete_form,{ 'attr': {'style' : "display: inline-block",'class': "btn btn-default " ,'onclick' : "DeleteEntity('show',this);return false",'title':"Suppprimer ",'data-message':"Supprimer cet employé ? "}}) }}  <span><i class="fa fa-trash-o"></i></span> <button hidden="hidden"  type="submit"  > </button> {{ form_end(delete_form) }}#}
